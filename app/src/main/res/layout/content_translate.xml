<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".translate">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/bbb"
        android:layout_marginLeft="-80dp"
        android:layout_marginRight="-80dp"
        android:layout_marginBottom="-15dp"/>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <Button
            android:id="@+id/CVAButton"
            android:layout_width="260dp"
            android:layout_height="60dp"
            android:layout_marginBottom="364dp"
            android:text="@string/CVA"
            android:textSize="30sp"
            android:textColor="#FF0000"
            android:textStyle="bold"
            android:background="@drawable/custom_button"
            android:textAllCaps="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/MIButton"
            android:layout_width="260dp"
            android:layout_height="60dp"
            android:layout_marginTop="120dp"
            android:layout_marginBottom="8dp"
            android:text="@string/MI"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="#FF0000"
            android:background="@drawable/custom_button"
            app:layout_constraintBottom_toTopOf="@+id/CVAButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.256" />

        <ImageView
            android:layout_width="366dp"
            android:layout_height="256dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:src="@drawable/paramedic"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/CVAButton" />
    </android.support.constraint.ConstraintLayout>


</RelativeLayout>